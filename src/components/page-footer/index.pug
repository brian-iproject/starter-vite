mixin page-footer(mods)

  //- Принимает:
  //-   props {
  //-     mods: ''          {array}  - модификаторы блока

  if typeof (props) === 'undefined'
    - props = {};

  - let allMods = '';
  if typeof (props.mods) !== 'undefined' && props.mods
    each mods, index in props.mods
      - allMods += index ? ' ': '';
      - allMods += 'page-footer--' + mods;

  footer.page-footer(class = allMods)
    .page-footer__inner.page-container
      .page-footer__menu
        +menu(footerMenu, 'footer-menu')

      .page-footer__info
        .page-footer__logo
          +logo({ attrs: { src: '/assets/images/logo-footer.svg' } })
        .page-footer__copy-c © 2006–2024 — Пиксель Плюс
        .page-footer__socials
          +socials(socials)
        .page-footer__link
          p: a(href="#") Публичная оферта
          p: a(href="#") Политика конфиденциальности


