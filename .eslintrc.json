{
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "editorconfig",
    "import"
  ],
  "extends": [
    "airbnb-base",
    "plugin:editorconfig/all",
    "plugin:import/recommended"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-new": "off",
    "new-cap": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"]
        ]
      }
    }
  }
}
